<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.bbadmin.Notification_View">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolBar"
        android:id="@+id/Notification_Toolbar_View"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Notification_Toolbar_View"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/a_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Notification_Toolbar_View"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            app:srcCompat="@mipmap/broadcast" />

        <TextView
            android:id="@+id/notification_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a_plus"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="@string/title"
            android:textAlignment="center"
            android:textColor="@color/colorRED"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notification_details_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_details_title"
            android:layout_marginBottom="10dp"
            android:gravity="left|center"
            android:text="@string/date"
            android:textSize="18sp"
            android:textColor="@color/colorDARKGREY"/>

        <TextView
            android:id="@+id/notification_details_description"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:gravity="left"
            android:lines="10"
            android:text="@string/description"
            android:textSize="18sp"
            android:textColor="@color/colorBLACK"/>

    </LinearLayout>

</RelativeLayout>
