<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pifss.bbadmin.EditProfile"
    tools:showIn="@layout/activity_edit_profile">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/ab_minus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/handbloodlogo"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ab_minus"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/ab_minus"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Khaled Hossni" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignEnd="@+id/nameText"
            android:layout_alignStart="@+id/nameText"
            android:layout_alignTop="@+id/ab_minus"
            android:background="@drawable/button_grey"
            android:text="@string/EditProfile_Save"
            android:textColor="@color/colorWHITE"

            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/fitWindowsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ab_minus"
            android:layout_alignParentStart="true"
            android:layout_marginTop="34dp">


            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewEmail"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/location"
                android:drawablePadding="10dp"
                android:text="@string/EditProfile_Branch_Name"
                android:textColor="@color/colorRED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp" />

            <TextView
                    android:id="@+id/Gender1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/EditProfile_Gender1"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorRED"
                    android:textStyle="bold"
                    android:drawableLeft="@mipmap/genders"
                    android:drawablePadding="10dp"/>

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp" />


            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView35"
                android:layout_below="@+id/textViewDate"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/envelope"
                android:drawablePadding="10dp"
                android:text="@string/EditProfile_Email"
                android:textColor="@color/colorRED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:theme="@style/CampEditHint">

                <EditText
                    android:id="@+id/emailText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/colorBLACK"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/lblphoone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewEmail"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="10dp"
                android:text="@string/EditProfile_Phone"
                android:textColor="@color/colorRED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:theme="@style/CampEditHint">

                <EditText
                    android:id="@+id/phoneText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/colorBLACK"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewEmail"
                android:layout_marginTop="5dp"
                android:drawableLeft="@mipmap/id"
                android:drawablePadding="10dp"
                android:text="@string/EditProfile_Civil_ID"
                android:textColor="@color/colorRED"
                android:textSize="16sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:theme="@style/CampEditHint">

                <EditText
                    android:id="@+id/civilText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="22dp"
                    android:textColor="@color/colorBLACK"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Gender1"
                android:layout_below="@+id/Gender2"
                android:text="@string/EditProfile_Date_of_Birth"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorRED"
                android:textStyle="bold"
                android:drawableLeft="@mipmap/calendargrey"
                android:drawablePadding="10dp" />


            <TextView
                android:id="@+id/chooseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:height="30dp"
                android:background="@drawable/text_view_date"
                android:elevation="10dp"
                android:ems="10"
                android:foregroundTint="@color/colorWHITE"
                android:gravity="center"
                android:hint="@string/EditProfile_Choose_Date_of_Birth"
                android:inputType="textPersonName"
                android:padding="4dp"
                android:textAlignment="center"
                android:textColor="@color/colorBLACK"
                android:textSize="18sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CampAddHint">

                <EditText
                    android:id="@+id/Edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/padlock"
                    android:drawablePadding="10dp"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/login"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionUnspecified"
                    android:maxLines="1"
                    android:textColor="@color/colorRED"
                    android:textStyle="bold"
                    android:layout_marginBottom="40dp"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>
