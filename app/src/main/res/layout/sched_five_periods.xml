<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        // 1. Date and Total

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgCalender"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                app:srcCompat="@mipmap/ic_calender" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/imgCalender"
                android:layout_weight="0.84"
                android:gravity="fill_vertical"
                android:text="dd/mm/yy" />

            <ImageView
                android:id="@+id/imgTotalRegistered"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/ic_person" />

            <TextView
                android:id="@+id/txtTotalRegistered"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:gravity="fill_vertical"
                android:text="13/20" />

        </LinearLayout>

        // 2. First Row

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_weight="0.15"
            android:text="ـــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــــ" />

        <LinearLayout
            android:id="@+id/A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">


            <LinearLayout
                android:id="@+id/group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:background="@drawable/button_grey"


                >

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">               <ImageView
                    android:id="@+id/ClockPeriod1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_clock"

                    />

                <TextView
                    android:id="@+id/txtPeriod1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/ClockPeriod1"
                    android:text="@string/sched_period1"
                    android:textColor="@color/colorBLACK" />
</LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/personImgPeriod1"
                        android:layout_width="18dp"
                        android:layout_height="15dp"
                        android:layout_below="@id/ClockPeriod1"
                        android:src="@mipmap/ic_person" />

                    <TextView
                        android:id="@+id/txtTotal1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtPeriod1"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/personImgPeriod1"
                        android:text="0/5"
                        android:textColor="@color/colorRED"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/group2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/ImgClock2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_clock" />

                <TextView
                    android:id="@+id/txtPeriod2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/sched_period2"
                    android:textColor="@color/colorBLACK" />

                <ImageView
                    android:id="@+id/ImgPerson2"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/ImgClock2"
                    android:src="@mipmap/ic_person" />

                <TextView
                    android:id="@+id/txtTotal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPeriod2"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/ImgPerson2"
                    android:text="0/5"
                    android:textColor="@color/colorRED"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <ImageView
                    android:id="@+id/ImgClock3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_clock" />

                <TextView
                    android:id="@+id/txtPeriod3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/sched_period3"
                    android:textColor="@color/colorBLACK" />

                <ImageView
                    android:id="@+id/ImgPerson3"
                    android:layout_width="18dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/ImgClock3"
                    android:src="@mipmap/ic_person" />

                <TextView
                    android:id="@+id/txtTotal3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPeriod3"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/ImgPerson3"
                    android:text="0/5"
                    android:textColor="@color/colorRED"
                    android:textSize="12sp" />

            </RelativeLayout>


        </LinearLayout>

        //3. Second Row

        <LinearLayout
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/A"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">


            <RelativeLayout
                android:id="@+id/group4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgPerson4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ImgClock4"
                    android:src="@mipmap/ic_person" />

                <TextView
                    android:id="@+id/txtPeriod4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ImgPerson4"
                    android:text="@string/sched_period4" />

                <ImageView
                    android:id="@+id/ImgClock4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_clock" />

                <TextView
                    android:id="@+id/txtTotal4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPeriod4"
                    android:layout_toRightOf="@id/ImgPerson4"
                    android:text="4/5" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImgPerson5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ImgClock5"
                    android:src="@mipmap/ic_person" />

                <TextView
                    android:id="@+id/txtPeriod5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ImgPerson5"
                    android:text="@string/sched_period5" />

                <ImageView
                    android:id="@+id/ImgClock5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_clock" />

                <TextView
                    android:id="@+id/txtTotal5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPeriod5"
                    android:layout_toRightOf="@id/ImgPerson5"
                    android:text="5/5" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>