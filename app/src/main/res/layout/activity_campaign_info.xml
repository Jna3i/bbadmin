<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pifss.bbadmin.CampaignInfo">

    <TextView
        android:id="@+id/campInfo_txtCampNameID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:text="Campaign Name"
        android:textSize="18sp"
        android:layout_below="@+id/campInfo_toolbarID"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/campInfo_mapViewID"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/campInfo_txtCampNameID"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/campInfo_txtDateFromID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/campInfo_locationID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campInfo_locationID"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="From" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campInfo_txtDateFromID"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="To" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Location"
        android:id="@+id/textView2"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/campInfo_mapViewID"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/campInfo_txtDateToID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView14"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campInfo_txtDateToID"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        android:text="Description" />

    <TextView
        android:id="@+id/campInfo_txtDescriptionID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/campInfo_txtDateToID"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="TextView" />

    <Button
        android:id="@+id/campInfo_btnEditID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Edit" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/campInfo_toolbarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
