<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/campListItem_txtCampNameID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Campaign Name"
        android:textSize="18sp"
        android:textColor="@color/colorBLACK"
        />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:weightSum="1"
        android:layout_below="@+id/campListItem_txtCampNameID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/campListItem_dateFromID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/campListItem_txtCampNameID"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.45"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="From"
            android:textColor="@color/colorBLACK"
            android:textSize="16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_below="@+id/campListItem_txtCampNameID"
            android:layout_toEndOf="@+id/campListItem_dateFromID"
            android:layout_toRightOf="@+id/campListItem_dateFromID"
            android:layout_weight="0.10"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="-"
            android:textColor="@color/colorBLACK"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/campListItem_dateToID"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_marginRight="4dp"
            android:layout_toEndOf="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_weight="0.45"
            android:gravity="center_horizontal"
            android:padding="3dp"
            android:text="To"
            android:textColor="@color/colorBLACK"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>