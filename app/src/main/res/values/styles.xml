<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorToolBar</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CampAddHint" parent="TextAppearance.AppCompat">
        //hint color And Label Color in False State
        <item name="android:textColorHint">@color/colorRED</item>
        <item name="android:textSize">18sp</item>

        //Label color in True State
        <item name="colorAccent">@color/colorRED</item>

        //Bar Color False And True State
        <item name="colorControlNormal">@color/colorGREY</item>
        <item name="colorControlActivated">@color/colorRED</item>
    </style>


    <style name="CampInfoHint" parent="TextAppearance.AppCompat">
         //Bar Color False And True State
        <item name="colorControlNormal">@color/colorTRANSPARENT</item>
        <item name="colorControlActivated">@color/colorTRANSPARENT</item>
    </style>
    <style name="CampEditHint" parent="TextAppearance.AppCompat">
        <item name="colorControlNormal">@color/colorBLACK</item>
        <item name="colorControlActivated">@color/colorBLACK</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorRED</item>
    </style>
</resources>
